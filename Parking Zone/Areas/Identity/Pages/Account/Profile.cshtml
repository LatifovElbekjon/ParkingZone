@page
@model ParkingZone.Areas.Identity.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">User Profile</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center mb-4">Profile Information</h4>
                    <dl class="row">
                        <dt class="col-sm-3">Username</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">@Model.Phone</dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary me-2" asp-page="/Account/Manage/Index">Change Info</a>
                    <a class="btn btn-secondary" asp-page="/Account/Manage/ChangePassword">Change Password</a>
                </div>
            </div>
        </div>
    </div>
</div>