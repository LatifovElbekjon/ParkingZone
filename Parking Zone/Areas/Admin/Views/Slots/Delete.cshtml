@model ParkingZone.ViewModels.SlotVMs.DetailsSlotViewModel

@if (ViewBag.Warning != null)
{
    <div class="container mt-5">
        <div class="alert alert-danger text-center">
            <h1>@ViewBag.Warning</h1>
        </div>
    </div>
}
else
{
    ViewData["Title"] = "Delete";

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-danger text-white">
                        <h3 class="card-title text-center">Are you sure you want to delete this?</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SlotNumber)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.SlotNumber)</dd>

                            <dt class="col-sm-4">Based zone:</dt>
                            <dd class="col-sm-8">@ViewData["ZoneName"]</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IsAvailableForBooking)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.IsAvailableForBooking)</dd>

                            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tariff)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Tariff)</dd>
                        </dl>

                        <form asp-action="DeleteConfirm">
                            <input type="hidden" asp-for="SlotId" />
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-action="Index" asp-route-zoneId="@Model.ZoneId" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}